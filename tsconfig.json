{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "checkJs": false,
    "allowJs": true,
    "target": "es6",
    "outDir": "./lib",
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "generators/**/*",
    "test/**/test.ts"
  ],
  "exclude": [
    "coverage",
    "travis",
    "generators/app/templates",
    "templates/**/*.[jt]s",
    "test/**/results/**/*.[jt]s",
    "test/**/playground/**/*.[jt]s"
  ]
}
