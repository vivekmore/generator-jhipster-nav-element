import './<%=styleSheetName%>';

import React from 'react';
import { Translate } from 'react-jhipster';
import { connect } from 'react-redux';
import { Row, Col } from 'reactstrap';

export type <%=statePropName%> = StateProps;

export const <%=reactComponentName%> = (props: <%=statePropName%>) => {
  const { message } = props;

  return (
    <Row>
      <Col md="1"/>
      <Col md="10">
        <h6 className="text-right">{message}</h6>
        <h1 className="text-capitalize text-center">
          <% if (enableTranslation) {  %><Translate contentKey="<%=translationKeyMenu%>.title">Title</Translate><%
          } else { %>Title<% } %>
        </h1>
        <h5 className="text-center">
          <% if (enableTranslation) {  %><Translate contentKey="<%=translationKeyMenu%>.subtitle">Subtitle</Translate><%
          } else { %>Subtitle<% } %>
        </h5>
        <hr/>
        <p className="text-justify">
          <% if (enableTranslation) {  %><Translate contentKey="<%=translationKeyMenu%>.content">Content</Translate><%
          } else { %>Content<% } %>
        </p>
      </Col>
      <Col md="1"/>
    </Row>
  )
}

const mapStateToProps = storeState => ({
  message: storeState.message
});

type StateProps = ReturnType<typeof mapStateToProps>;

export default connect(mapStateToProps)(<%=reactComponentName%>);
